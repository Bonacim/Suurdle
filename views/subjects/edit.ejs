<%- include("../partials/header") %>

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Edit <%= subject.name %></h1>
        <div>
            <form action="../<%= subject.slug %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" name="subject[name]" placeholder="Subject's name" value="<%= subject.name %>" required>
                </div>
                <div class="form-group">
                    <label for="referTo">Reference</label>
                    <input id="referTo" class="form-control" type="text" name="subject[referTo]" placeholder="Subject's reference">
                </div>
                <div class="form-group">
                    <label for="verified">Verified</label>
                    <input id="verified" class="form-control" type="checkbox" name="subject[verified]" <%=subject.verified ? "checked" : ""%>>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="./">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/scripts") %>
<%- include("../partials/footer") %>

