<%- include("./partials/header") %>

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Please sign up</h1>
        <div class="alert alert-warning">We recommend using en email account from Gmail since some providers like Outlook blocks our emails during this early build which means <strong>you may not be able to recover your password if you are not using Gmail.</strong></div>
        <div>
            <form action="/register" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" class="form-control" type="text" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" class="form-control" type="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" class="form-control" type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">                
                    <label for="firstName">First name</label>
                    <input id="firstName" class="form-control" type="text" name="firstName" placeholder="First name" required>
                </div>
                <div class="form-group">
                    <label for="lastName">Last name</label>
                    <input id="lastName" class="form-control" type="text" name="lastName" placeholder="Last name" required>
                </div>
                <div class="form-group">
                    <label for="avatar">Avatar</label>
                    <input id="avatar" class="form-control h-100" type="file" name="avatar" accept="image/*">
                    <small>10 MB limit</small>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign up</button>
                </div>
            </form>
            <a href="javascript:history.back()">Go back</a>
        </div>
    </div>
</div>

<%- include("./partials/scripts") %>
<%- include("./partials/footer") %>
